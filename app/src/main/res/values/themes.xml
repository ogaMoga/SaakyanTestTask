<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevelopersLive" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titleText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="regularText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="descriptionText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/regularText</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>