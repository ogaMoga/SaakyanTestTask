<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevelopersLive" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_background</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/gray</item>
    </style>

    <style name="titleText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="regularText" parent="Widget.AppCompat.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="descriptionText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_marginTop">20dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/regularText</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>